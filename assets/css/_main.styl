html, body
  width: 100%
  height: 100%

body
  background: $Cb
  font-family: 'Open Sans', sans-serif

main
  padding-top: $Hh+20

.VA:before
  content: ''
  height: 100%
  display: inline-block
  vertical-align: middle


button
  border: 0
  outline: none
  transition: transform .3s ease
  transform: scale(1) translatez(0)
  
  &.disabled
    background: gray !important
  
  &.connect
    display: block
    box-sizing: border-box
    width: 100%
    background: $Cm
    margin-top: 40px
    padding: 20px 0
    text-align: center
    font-size: 26px
    color: white

  

  &:active
    transform: scale(0.95) 

 

.hidden
  display: none
  

.cf:after
  content: ''
  display: table
  clear: both


.isle
  display: block
  position: relative
  box-sizing: border-box
  margin: 20px 20px
  padding: 10px
  background: white
  box-shadow: 0 2px 10px -3px black

a.isle
  text-decoration: none
  color: black

.field
  padding: 5px
  margin: 10px 0
  .fieldTitle
    padding-bottom: 2px
    margin: 0 0 5px !important
    border-bottom: 1px solid $Cm

p
  line-height: 1.3

table
  margin-top: 20px 
  width: 100%
  // border: 1px solid $Cm
  td
    padding: 5px
    border: 1px solid $Cm
