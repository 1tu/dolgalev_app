_fs = 2em


#header
  z-index: 1000
  position: fixed
  top: 0
  left: 0
  right: 0
  background: $Cm
  display: block
  height: $Hh
  text-align: center

  createrequest
    padding: .5em 1em
    background-color: $Cb
    color: $Cm
    font-weight: bold
    border-radius: 5px

  title
    display: inline-block
    font-size: 2.5em

  nav-item, createrequest
    display: inline-block
    font-size: _fs

  title, createrequest, back
    vertical-align: middle

  back, title
    color: white

  back
    left: 0
    box-sizing: border-box
    background: url('../icon/back.png')

  nav-toggler, nav, back
    position: absolute

  nav-toggler, nav
    right: 0
  
  nav-toggler, back
    background-size: cover
    height: $Hh
    width: $Hh

  nav-toggler
    top: 0
    background: url('../icon/menu.png')
    background-size: cover

  nav
    text-align: left
    z-index: 100
    top: 100%
    left: 0   
    right: 0
    background: darken($Cb, 20%)
    font-size: 1.3em

  nav-item
    width: 100%
    padding: .4em
    margin: .2em

