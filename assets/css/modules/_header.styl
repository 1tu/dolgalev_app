#header
  z-index: 100
  position: fixed
  top: 0
  left: 0
  right: 0
  height: $Hh
  text-align: center

  .inner
    background: $Cm
    display: block
    z-index: 10
    height: 100%
    width: 100%

  createrequest
    padding: .25em .5em
    background-color: $Cb
    color: $Cm
    font-weight: bold
    border-radius: .3125em

  title
    display: inline-block
    font-size: 1.25em

  nav-item, createrequest
    display: inline-block
    font-size: 1.2em

  title, createrequest, back
    vertical-align: middle

  back, title
    color: white

  back
    left: 0
    box-sizing: border-box
    background: url('../icon/back.png')

  nav-toggler, nav, back
    position: absolute

  nav-toggler, nav
    right: 0
  
  nav-toggler, back
    background-size: cover
    height: $Hh
    width: $Hh

  nav-toggler
    top: 0
    background: url('../icon/menu.png')
    background-size: cover

  nav
    text-align: left
    z-index: -1
    top: -16em
    left: 1em   
    right: 1em
    background: darken($Cb, 20%)
    transition: top .2s ease
    &.opened
      top: 100%

  nav-item
    width: 100%
    padding: .5em 1em
    margin: .3em

